%h2 Details about #{@user.username}
%ul#details
  %li
    First Name:
    = @user.first_name
  %li
    Last Name:
    = @user.last_name
  %li
    Username:
    = @user.username
  %li
    Email:
    = @user.email
- # if this page is shown to the user which has these info
- if @user.id == current_user.id
  = link_to "Edit #{@user.username}'s info", edit_user_registration_path(@user)
  = link_to "Delete #{@user.username}'s account", user_registration_path(@user), :method => :delete
- # if this page is shown to a secretary user
- if current_user.type == 'Secretary' && @user.id != current_user.id
  = link_to "Edit #{@user.username}'s info", edit_user_path(@user)
  = link_to "Delete #{@user.username}'s account", user_path(@user), :method => :delete
  = link_to 'Back to users list', users_path